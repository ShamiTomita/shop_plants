<div class="container">
  <p>Lovely plants, lovely plants...</p>
  <p data-controller="hello" data-action="click->hello#handleClick">clickme</p>
  <div class="plants">
    <% @products.each do |product| %>
      <div tabindex="-1" data-controller="product"  data-action="click->product#handleClick" class="product-card" id=<%=product.id%>>
        <h1>Name: <%=product.name%> Price: <%= product.price %></h1>
        <%image = product.img%><%= image_tag (image) %>
        <div class="product-show">
          <button type="button" class="x-button">
              <span class="sr-only">Close menu</span>
              <!-- Heroicon name: outline/x -->
              <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
              </svg>
          </button>

            <div class="grid grid-cols-2">
              <div class="grid1">
                <%image = product.img%><%= image_tag (image) %>
              </div>
              <div class="grid2">
                <h1 ><%=product.name%></h1>
                <p class="card-text"><%= product.description %></p>
              </div>
              <div class="grid3">
                <p style="text-decoration-line: underline;">Light Requirements: </p><p class="card-text"><%= product.light %></p>
                <br>
                <p style="text-decoration-line: underline;">Watering Requirements:</p><p class="card-text"><%= product.watering %></p>
                <br>
                <h3 style="text-decoration-line: underline;">Temperature:</h3><p class="card-text"><%= product.temp %></p>
                </div>
                <div class="grid4">
                <a href="#" data-action="click->product#handleBuy" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Add to cart</a>
                </div>
              </div>
            </div>
        </div>
        <%end%>
      </div>
  </div>
